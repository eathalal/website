<!DOCTYPE html>
<html>
<head>
  <title>Eat Halal | <%= yield(:title) %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <!--[if lt IE 9]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js">
    <script src="//cdnjs.cloudflare.com/ajax/libs/respond.js/1.3.0/respond.js"></script>
  <![endif]-->
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= render "layouts/navbar" %>	

<header class="container">
  <div class="row">
    <div class="col-md-6">
      <%= image_tag "logo.png" %>
    </div>
    <div class="col-md-6">
      <nav>
        <ul class="nav nav-pills">
          <li class="active"><%= link_to "Categories", admin_categories_path %></li>
          <li><%= link_to "Posts", admin_posts_path %></li>

        </ul>
      </nav>      
    </div>
  </div>
	
</header>

<div class="container">
  <% flash.each do |key, value| %> 
    <%= content_tag(:div, raw(value + ' <a class="close" data-dismiss="alert" href="#" aria-hidden="true">&times;</a>
'), class: "alert alert-#{key}") %> 
  <% end %>  
</div>

<%= render "layouts/jumbotron" %>

<div id="wrapper" class="container">

  <main id="content" role="main" class="col-md-9">
    <%= yield %>
  </main>

</div>

<div id="social">
  <div class="container">
    <div class="col-md-4">
      <i class="icon-twitter"></i>
    </div>
    <div class="col-md-4">
      <i class="icon-facebook"></i>
    </div>
    <div class="col-md-4">
      <i class="icon-google-plus"></i>
    </div>
  </div>
</div>

<footer>
  
</footer>

</body>
</html>
